<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="autoIncrement" value="false" dbms="postgresql,mssql,oracle"/>
    <property name="autoIncrement" value="true" dbms="h2"/>

    <changeSet id="createVerificationTable" author="vlitvinova" objectQuotingStrategy="LEGACY">
        <preConditions onError="HALT" onFail="MARK_RAN" onSqlOutput="IGNORE">
            <not>
                <tableExists tableName="sms_verification"/>
            </not>
        </preConditions>
        <createTable tableName="sms_verification">
            <column name="verificationid" remarks="PrimaryKey autogenerated" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="processguid" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="phonenumber" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createSequence incrementBy="1" sequenceName="sms_verification_verificationid_seq" startValue="1"/>
        <addPrimaryKey columnNames="verificationid" constraintName="pk_verification_verificationid" tableName="sms_verification"/>
    </changeSet>
</databaseChangeLog>